{{#each reserva}}
<div class="asr__citas__itemContainer" data-serviceID={{serviceID}} data-userID={{userID}}>
    <div class="asr__citas__item">
        <div class="asr__citas__item__citaNombre {{color}}">
            <p>{{serviceName}}</p>
        </div>
        {{!-- <div class="asr__citas_item__estado">
            <button id="btnEstado" class="ars__citas__item__estado__button">
                <i class="icon-check"></i>
            </button>
        </div> --}}
        <div class="asr__citas__item__texto">
            <p class="asr__citas__item__texto__nombre">{{userName}} {{userSurnames}}</p>
            <div class="asr__citas__item__texto__diaIconosContainer">
                <div class="asr__citas__item__texto__diaIconosContainer-left">
                    <div class="asr__citas__item__texto__diaContainer first">
                        <i class="icon-calendar-check"></i>
                        <p class="asr__citas__item__texto__dia">{{day}}</p>
                    </div>
                    <div class="asr__citas__item__texto__diaContainer">
                        <i class="icon-clock"></i>
                        <p class="asr__citas__item__texto__dia">{{time}}</p>
                    </div>
                </div>
                <div class="asr__citas__item__showMoreDetails">
                    <i class="icon-double-down"></i>
                </div>
                <div class="asr__citas__item__texto__diaIconosContainer-right">
                    {{#if comments }}
                    <i class="icon-comment"></i>
                    {{/if}}
                    {{!-- <i class="icon-new"></i> --}}
                </div>
            </div>
        </div>
        <div class="asr__citas__item__details">

            <div class="asr__citas__item__details__comentario">
                <p>Comentario del cliente</p>
                <textarea name="" id="" readonly>{{comments}}</textarea>
            </div>
            <div class="asr__citas__item__details__pushNotification">
                <p>Mensaje para cliente</p>
                <textarea class="asr__textarea__pushNotification" name="" id=""
                    placeholder="Escriba mensaje para enviar notifiaciÃ³n al cliente"></textarea>
                <div class="ars__citas__item__notificacion__buttons">
                    <button class="asr__btn__send__notification asr__citas__item__buttonPush"
                        data-userID={{userID}}>Enviar
                        push</button>
                    <button class="asr__btn__send__notification asr__citas__item__buttonEmail"
                        data-userID={{userID}}>Enviar email</button>
                </div>
            </div>
            <div class="asr__citas__item__details__buttons__crud">
                <button class="idButtonsDeleteModify asr__citas__item__buttonDelete"
                    data-reservation_id={{reservationID}} data-name="delete">Borrar
                    Reserva</button>
                <button class="idButtonsDeleteModify asr__citas__item__buttonModify"
                    data-reservation_id={{reservationID}} data-name="modify" data-date={{date}}>Modificar
                    Reserva</button>
            </div>
            <div class="asr__citas__item__showLessDetails">
                <i class="icon-double-up"></i>
            </div>

        </div>
    </div>

</div>
{{/each}}